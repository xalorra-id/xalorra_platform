{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "module": "Node16",
    "moduleResolution": "node16",
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ], // âœ… ini untuk mengaktifkan '@/...' alias
      "@xalorra/ui": [
        "../../packages/ui/src"
      ],
      "@xalorra/hooks": [
        "../../packages/hooks/src"
      ],
      "@xalorra/types": [
        "../../packages/types/src"
      ],
      "@xalorra/utils": [
        "../../packages/utils/src"
      ],
      "@xalorra/i18n": [
        "../../packages/i18n/src"
      ]
    },
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
